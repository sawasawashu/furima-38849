<%= render "shared/header" %>

<%# 商品の概要 %>
<div class="item-show">
  <div class="item-box">
    <h2 class="name">
      <%= @item.product_name %>
    </h2>
    <div class="item-img-content">
      <%= image_tag @item.image ,class:"item-box-img" %>
      <% if @item.purchaser != nil %>
      <div class="sold-out">
        <span>Sold Out!!</span>
      </div>
      <% end %>
    </div>
    <div class="item-price-box">
      <span class="item-price">
        <%= @item.price%>
      </span>
      <span class="item-postage">
        <%= @item.charge.name %>
      </span>
    </div>
   <% if user_signed_in?%>
    <% if current_user.id == @item.user_id && @item.purchaser.nil? %>
    <%= link_to "商品の編集", edit_item_path, method: :get, class: "item-red-btn" %>
    <p class="or-text">or</p>
    <%= link_to "削除", item_path(@item), method: :delete, class:"item-destroy" %>
    <% elsif @item.purchaser != nil %>
    <% else %>
      <%= link_to "購入画面に進む", item_purchasers_path(@item), method: :get ,class:"item-red-btn"%>
    <% end %>
   <%end%>

    <div class="item-explain-box">
      <span><%= @item.introduction %></span>
    </div>
    <table class="detail-table">
      <tbody>
        <tr>
          <th class="detail-item">出品者</th>
          <td class="detail-value"><%= @item.user.nickname %></td>
        </tr>
        <tr>
          <th class="detail-item">カテゴリー</th>
          <td class="detail-value"><%= @item.category.name %></td>
        </tr>
        <tr>
          <th class="detail-item">商品の状態</th>
          <td class="detail-value"><%= @item.status.name %></td>
        </tr>
        <tr>
          <th class="detail-item">配送料の負担</th>
          <td class="detail-value"><%= @item.charge.name %></td>
        </tr>
        <tr>
          <th class="detail-item">発送元の地域</th>
          <td class="detail-value"><%= @item.region.name %></td>
        </tr>
        <tr>
          <th class="detail-item">発送日の目安</th>
          <td class="detail-value"><%= @item.delivery_day.date %></td>
        </tr>
      </tbody>
    </table>
    <div class="option">
      <div class="favorite-btn">
        <%= image_tag "star.png" ,class:"favorite-star-icon" ,width:"20",height:"20"%>
        <span>お気に入り 0</span>
      </div>
      <div class="report-btn">
        <%= image_tag "flag.png" ,class:"report-flag-icon" ,width:"20",height:"20"%>
        <span>不適切な商品の通報</span>
      </div>
    </div>
  </div>
  <%# /商品の概要 %>


   <div class="comment-box">
     <% if user_signed_in? %>
      <%= form_with(model: [@item, @comment], local: true) do |form| %>
        <%= form.text_area :text, placeholder: "口コミを投稿する", rows: "3" %>
        <%= form.submit "SEND" ,class:"submit-botton" %>
      <% end %>
     <%else%>
        <strong><p>※口コミ投稿には新規登録/ログインが必要です。 </p></strong>
     <%end%>
   </div>
   <div class="comments">
      <h4>＜口コミ一覧＞</h4>
      <% @comments.each do |comment| %>
        <p>
          <strong><%= link_to comment.user.nickname, "/users/#{@comment.user_id}" %>：</strong>
          <%= comment.text %>
           <% if comment.user == current_user%>
            <%= link_to "編集", edit_item_comment_path(@item.id,comment.id), method: :get , class:"comment-btn"%>
            <%= link_to "削除", edit_item_comment_path(@item.id,comment.id), method: :delete , class:"comment-destroy"%>
           <%end%>
        </p>
      <% end %>
   </div>
  <div class="links">
    <a href="#" class="change-item-btn">
      ＜ 前の商品
    </a>
    <a href="#" class="change-item-btn">
      後ろの商品 ＞
    </a>
  </div>
  <a href="#" class="another-item"><%= @item.category.name %>をもっと見る</a>
</div>

<%= render "shared/footer" %>
